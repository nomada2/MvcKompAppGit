@model IEnumerable<MvcKompApp.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "Index";
}
<style>
    .cell
    {
        display: inline-block;
    }

    .head
    {
        font-weight: bold;
    }

        .head .cell, .row .cell
        {
            width: 100%;
        }

    .details .cell
    {
        width: 100%;
    }

    .details
    {
        display: none;
        background-color: gray;
    }

    /*#report th
    {
        background: #7CB8E2 url(header_bkg.png) repeat-x scroll center left;
        color: #fff;
        padding: 7px 15px;
        text-align: left;
    }*/

    .detailsRow
    {
        background: #C7DDEE none repeat-x scroll center left;
        color: #000;
        padding: 7px 15px;
    }

    #report tr.odd 
    {
        background: #fff url(row_bkg.png) repeat-x scroll center left;
        cursor: pointer;
    }

    #report div.arrow
    {
        background: transparent url(../../Content/Images/arrows.png) no-repeat scroll 0px -16px;
        width: 16px;
        height: 16px;
        display: block;
    }

    #report div.up
    {
        background-position: 0px 0px;
    }

    .csv-validation-error
    {
        border: 1px solid #ff0000;
        background-color: #F5E4EA;
        font-size: large;
    }
</style>
